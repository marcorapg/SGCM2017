@model Medicamento

@{
    ViewBag.Title = "Incluir Medicamento";
}

<h2>Incluir Medicamento</h2>

@using (Html.BeginForm("Incluir", "Medicamento", FormMethod.Post, new { @class = "form-inline" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id)

    <fieldset class="border">
        <legend class="border">Informações</legend>

        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.NomeGenerico, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.NomeGenerico, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NomeGenerico, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.NomeFabrica, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.NomeFabrica, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NomeFabrica, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.NomeFabricante, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.NomeFabricante, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NomeFabricante, "", new { @class = "text-danger" })
        </div>
    </fieldset>
    
    @Html.Partial("_BotoesCRUDPadrao")
}